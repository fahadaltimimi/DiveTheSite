<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginBottom="2dp"
    android:orientation="vertical"
    android:background="@color/diveSiteBlueOpaque" >
   
    <TextView style="@style/NDBCStationDataItemText"
        android:id="@+id/ndbc_station_data_item_title"
        android:textStyle="bold" >
    </TextView>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
    	<LinearLayout 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:orientation="vertical" >
        	
           	<TableLayout
           		android:layout_width="wrap_content"
           	    android:layout_height="wrap_content" >
           	    
           	    <TableRow >
           	    	<TextView style="@style/NDBCStationDataHeaderText"
	            		android:id="@+id/ndbc_data_item_label_00" >
	            	</TextView>
	            	<TextView style="@style/NDBCStationDataItemText"
	            		android:id="@+id/ndbc_data_item_value_00" >
	            	</TextView>		    
           	    </TableRow>
           	    
           	    <TableRow >
           	    	<TextView style="@style/NDBCStationDataHeaderText"
	            		android:id="@+id/ndbc_data_item_label_01" >
	            	</TextView>
	            	<TextView style="@style/NDBCStationDataItemText"
	            		android:id="@+id/ndbc_data_item_value_01" >
	            	</TextView>		    
           	    </TableRow>
           	    
           	    <TableRow >
           	    	<TextView style="@style/NDBCStationDataHeaderText"
	            		android:id="@+id/ndbc_data_item_label_02" >
	            	</TextView>
	            	<TextView style="@style/NDBCStationDataItemText"
	            		android:id="@+id/ndbc_data_item_value_02" >
	            	</TextView>		    
           	    </TableRow>
           	</TableLayout>
        </LinearLayout>
        
       	<LinearLayout 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:orientation="vertical" >
        	
           	<TableLayout
           		android:layout_width="wrap_content"
           	    android:layout_height="wrap_content" >
           	    
           	    <TableRow >
           	    	<TextView style="@style/NDBCStationDataHeaderText"
	            		android:id="@+id/ndbc_data_item_label_10" >
	            	</TextView>
	            	<TextView style="@style/NDBCStationDataItemText"
	            		android:id="@+id/ndbc_data_item_value_10" >
	            	</TextView>		    
           	    </TableRow>
           	    
           	    <TableRow >
           	    	<TextView style="@style/NDBCStationDataHeaderText"
	            		android:id="@+id/ndbc_data_item_label_11" >
	            	</TextView>
	            	<TextView style="@style/NDBCStationDataItemText"
	            		android:id="@+id/ndbc_data_item_value_11" >
	            	</TextView>		    
           	    </TableRow>
           	    
           	    <TableRow >
           	    	<TextView style="@style/NDBCStationDataHeaderText"
	            		android:id="@+id/ndbc_data_item_label_12" >
	            	</TextView>
	            	<TextView style="@style/NDBCStationDataItemText"
	            		android:id="@+id/ndbc_data_item_value_12" >
	            	</TextView>		    
           	    </TableRow>
           	</TableLayout>
        </LinearLayout> 
        
        <LinearLayout 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:orientation="vertical" >
        	
           	<TableLayout
           		android:layout_width="wrap_content"
           	    android:layout_height="wrap_content" >
           	    
           	    <TableRow >
           	    	<TextView style="@style/NDBCStationDataHeaderText"
	            		android:id="@+id/ndbc_data_item_label_20" >
	            	</TextView>
	            	<TextView style="@style/NDBCStationDataItemText"
	            		android:id="@+id/ndbc_data_item_value_20" >
	            	</TextView>		    
           	    </TableRow>
           	    
           	    <TableRow >
           	    	<TextView style="@style/NDBCStationDataHeaderText"
	            		android:id="@+id/ndbc_data_item_label_21" >
	            	</TextView>
	            	<TextView style="@style/NDBCStationDataItemText"
	            		android:id="@+id/ndbc_data_item_value_21" >
	            	</TextView>		    
           	    </TableRow>
           	    
           	    <TableRow >
           	    	<TextView style="@style/NDBCStationDataHeaderText"
	            		android:id="@+id/ndbc_data_item_label_22" >
	            	</TextView>
	            	<TextView style="@style/NDBCStationDataItemText"
	            		android:id="@+id/ndbc_data_item_value_22" >
	            	</TextView>		    
           	    </TableRow>
           	</TableLayout>
        </LinearLayout>  
        
    </LinearLayout>
</LinearLayout>
