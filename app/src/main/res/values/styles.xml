<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.DiveTheSiteTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Set AppCompat’s actionBarStyle -->
        <!-- <item name="actionBarStyle">@style/MyActionBarStyle</item> -->

        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/diveSiteBlue</item>
        <item name="colorPrimaryDark">@color/diveSiteBlue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:actionMenuTextColor">@color/White</item>
        <item name="elevation">0dp</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="DiveSiteShortText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>
    
    <style name="DiveSiteLongText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="DiveSiteTableRow">
        <item name="android:layout_width">match_parent</item>   
        <item name="android:layout_height">wrap_content</item>   
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">0</item>
    </style>
	
    <style name="ratingbar_divesite" parent="@android:style/Widget.RatingBar">
	    <item name="android:progressDrawable">@drawable/divesite_rating_list</item>
	    <item name="android:minHeight">45dip</item>
	    <item name="android:maxHeight">45dip</item>
	</style>
	
    <style name="RegisterTextView">
        
    </style>
    
    <style name="RegisterEditText">
        <item name="android:layout_width">match_parent</item>
       	<item name="android:layout_height">wrap_content</item>
       	<item name="android:layout_marginLeft">10dp</item>
	   	<item name="android:layout_marginRight">10dp</item>
	   	<item name="android:paddingTop">3dp</item>
	   	<item name="android:paddingBottom">3dp</item>
	   	<item name="android:paddingLeft">7dp</item>
	   	<item name="android:paddingRight">7dp</item>
       	<item name="android:background">@drawable/textlines</item>
       	<item name="android:inputType">text</item>
    </style>
    
